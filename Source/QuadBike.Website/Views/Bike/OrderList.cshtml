@using QuadBike.Model.Entities
@model List<QuadBike.Model.ViewModel.OrderViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Bikes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders:</h2>

<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>User Email</th>
            <th>Order time</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Name</td>
            <td>@order.OrderPlaced</td>
            <td>
                <form asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" method="post">
                    @*<a asp-controller="Order" asp-action="More" asp-route-id="@order.Id" class="btn btn-sm btn-primary">More</a>*@
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>