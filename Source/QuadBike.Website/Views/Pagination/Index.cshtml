<script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        var pageSize = 6;
        var currentPage = 1;

        $.getJSON("Pagination/GetBikesPaggination?pageSize=" + pageSize + "&currentPage=" + currentPage,
            function (json) {
                var tr;
                for (var i = 0; i < json.length; i++) {
                    tr = $('<tr/>');
                    tr.append("<td>" + json[i].name + "</td>");
                    tr.append("<td>" + json[i].maxSpeed + "</td>");
                    tr.append("<td>" + json[i].typeEngine + "</td>");
                    tr.append("<td>" + json[i].power + "</td>");
                    tr.append("<td>" + json[i].fuel + "</td>");
                    tr.append("<td>" + json[i].description + "</td>");
                    tr.append("<td>" + json[i].price + "</td>");
                    $('table').append(tr);
                }
                $('#EmpInfo').DataTable({
                    "processing": true,
                    "lengthChange": false,
                    "pageLength": 5,
                    "deferRender": true
                });
            });
    });
</script>
<table id="EmpInfo" class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>MaxSpeed</th>
            <th>TypeEngine</th>
            <th>Power</th>
            <th>Fuel</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
