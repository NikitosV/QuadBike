@model QuadBike.Model.ViewModel.Pagination.AccountViewModel
<h2>Users list:</h2>
<table class="table">
    <tr><th>Email</th><th>PhoneNumber</th><th>Name</th><th></th></tr>
    @foreach (var user in Model.Accounts)
    {
        @if (!user.Email.Equals("moder@moder.by"))
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Name</td>
                <td>
                    <form asp-controller="Moder" asp-action="Delete" asp-route-userid="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Access</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<page-link page-model="Model.PageViewModel" page-action="UserList"></page-link>