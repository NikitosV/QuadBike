<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.js" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverses">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="ListTrips">Trips</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="ProviderList">Providers</a>
                        </li>

                        @if (User.IsInRole("user"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">Cart</a>
                                @*@await Component.InvokeAsync("CartComponent")*@
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-success" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name</a>
                                <div class="dropdown-menu">
                                    <p class="dropdown-header">Settings</p>
                                    <div class="dropdown-divider"></div>
                                    @if (User.IsInRole("moderator"))
                                    {
                                        <a asp-controller="Moder" asp-action="Index" class="dropdown-item">Roles list</a>
                                        <a asp-controller="Moder" asp-action="UserList" class="dropdown-item">Users list</a>
                                    }
                                    else if (User.IsInRole("provider"))
                                    {
                                        <a class="dropdown-item" asp-controller="Bike" asp-action="Index">Bikes List</a>
                                        <a class="dropdown-item" asp-controller="Trip" asp-action="Index">Trips List</a>
                                        <a class="dropdown-item" asp-controller="Bike" asp-action="OrderList">Orders List</a>
                                    }
                                    else if (User.IsInRole("user"))
                                    {
                                    }
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Index">Update Account</a>

                                    <div class="dropdown-divider"></div>
                                    <form method="post" asp-controller="Account" asp-action="LogOff">
                                        <input class="dropdown-item text-danger" type="submit" value="Log Off"/>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-success" asp-controller="Account" asp-action="Login">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="footer navbar-fixed-bottom">
        <div class="navbar-inner">
            <div class="container">
                <hr />
                <footer>
                    <p>&copy; 2019 - Stay with us</p>
                </footer>
            </div>
        </div>
    </div>
</body>
</html>