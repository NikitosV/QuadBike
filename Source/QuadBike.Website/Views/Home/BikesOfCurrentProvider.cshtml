@model IEnumerable<QuadBike.Model.Entities.Bike>

@{
    ViewData["Title"] = "BikesOfCurrentProvider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="album bg-light">
    <div class="container">
        <div class="row">
            @foreach (var u in Model)
            {
            <div class="col-md-4 align-self-between">
                <div class="card mb-4 shadow-sm">
                    @if (u.BikeImg != null)
                    {
                        <div class="view view-cascade overlay">
                            <img class="bd-placeholder-img card-img-top" style="width:100%; height:225px" src="data:image/jpg;base64,@(Convert.ToBase64String(u.BikeImg))" alt="Card image cap" />
                            <a>
                                <div class="mask rgba-white-slight"></div>
                            </a>
                        </div>
                    }
                    <div class="card-body card-body-cascade">
                        <p class="card-text">
                            <div>
                                <b>Name:</b> @u.Name
                            </div>
                            <div>
                                <b>Type Engine:</b> @u.TypeEngine
                            </div>
                            <div>
                                <b>Max Speed:</b> @u.MaxSpeed km / hour
                            </div>
                            <div>
                                <b>Power:</b> @u.Power
                            </div>
                            <div>
                                <b>Fuel:</b> @u.Fuel
                            </div>
                            <div>
                                <b>Description:</b> @u.Description
                            </div>
                            <div>
                                <b>Price:</b> @u.Price $ per one day
                            </div>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" asp-controller="Home" asp-action="ProviderBike" asp-route-accId="@u.AccountId">Contact us</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>