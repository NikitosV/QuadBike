@model IEnumerable<QuadBike.Model.Entities.Trip>
@{
    ViewData["Title"] = "TripsOfCurrentProvider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="album bg-light">
    <div class="container">
        <div class="row">
            @foreach (var u in Model)
            {
                <div class="col-md-6">
                    <div class="card mb-4 shadow-sm">
                        @if (u.TripImg != null)
                        {
                            <img class="bd-placeholder-img card-img-top" style="width:100%; height:325px" src="data:image/jpg;base64,@(Convert.ToBase64String(u.TripImg))" />
                        }
                        <div class="card-body">
                            <p class="card-text">
                                <div>
                                    <b>Name:</b> @u.TripName
                                </div>
                                <div>
                                    <b>Type:</b> @u.Type
                                </div>
                                <div>
                                    <b>Distance:</b> @u.Distance km
                                </div>
                                <div>
                                    <b>Amount of people:</b> @u.AmountOfPeople
                                </div>
                                <div>
                                    <b>Start:</b> @u.StartDate
                                </div>
                                <div>
                                    <b>End:</b> @u.EndTrip
                                </div>
                                <div>
                                    <b>Description:</b> @u.Description
                                </div>
                                <div>
                                    <b>Price:</b> @u.Price $
                                </div>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Home" asp-action="ProviderTrip" asp-route-tripId="@u.AccountId">Contact us</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>