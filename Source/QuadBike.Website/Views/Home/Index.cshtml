@using QuadBike.Model.Entities
@model QuadBike.Model.ViewModel.Pagination.IndexViewModel

@addTagHelper "*, QuadBike.Website"

@{
    ViewData["Title"] = "Home Page";
}

<div class="album bg-light">
    <div class="container">
        <div class="jumbotron mt-4">
            <h4>ATV marketplace</h4>
            <p class="lead">
                Quad bikes are vehicles designed for off-road use.
                They are not suited for travelling on public roads, mostly because they are light and offer little protection from other vehicles.
                But we want to solve this situation giving you a chance to enjoy this type of transport.
            </p>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index2" role="button">See trips »</a>
        </div>
        <div class="row">
            @foreach (Bike u in Model.Bikes)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        @if (u.BikeImg != null)
                        {
                            <img class="bd-placeholder-img card-img-top" style="width:100%; height:225px" src="data:image/jpg;base64,@(Convert.ToBase64String(u.BikeImg))" />
                        }
                        @*else
                        {
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="200" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false"
                                 role="img" aria-label="Placeholder: Thumbnail">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c">
                                </rect>
                                <text x="45%" y="55%" fill="#eceeef" dy=".3em">Empty</text>
                            </svg>
                        }*@

                        <div class="card-body">
                            <p class="card-text">
                                <div>
                                    <b>Name:</b> @u.Name
                                </div>
                                <div>
                                    <b>Max Speed:</b> @u.MaxSpeed mile / hour
                                </div>
                                <div>
                                    <b>Description:</b> @u.Description
                                </div>
                                <div>
                                    <b>Price:</b> @u.Price $ per one day
                                </div>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">More</button>
                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Cart" asp-action="AddToShoppingCart" asp-route-bikeId="@u.Id">Rent</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <page-link page-model="Model.PageViewModel" page-action="Index"></page-link>
    </div>
</div>