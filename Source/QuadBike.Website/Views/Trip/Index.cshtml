@model IEnumerable<QuadBike.Model.Entities.Trip>
@{
    ViewData["Title"] = "Trips";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Trips:</h2>
<table class="table">
    <tr><th>Trip Name</th><th>Type</th><th>Distance</th><th>Amount of people</th><th>Start Trip</th><th>End Trip</th><th>Description</th><th>Price</th><th></th></tr>
    @foreach (var trip in Model)
    {
        <tr>
            <td>@trip.TripName</td>
            <td>@trip.Type</td>
            <td>@trip.Distance km</td>
            <td>@trip.AmountOfPeople</td>
            <td>@trip.StartDate</td>
            <td>@trip.EndTrip</td>
            <td>@trip.Description</td>
            <td>@trip.Price $</td>
            <td>
                <form asp-controller="Trip" asp-action="Delete" asp-route-id="@trip.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div>
    <a class="btn btn-primary" asp-controller="Trip" asp-action="Create">Add Trip</a>
</div>